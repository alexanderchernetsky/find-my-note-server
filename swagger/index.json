{
  "openapi": "3.0.0",
  "info": {
    "title": "Find My Note Express API with Swagger",
    "version": "0.1.0",
    "description": "This is a simple CRUD API application made with Express and documented with Swagger",
    "contact": {
      "name": "Alex Chernetsky",
      "url": "https://alexander-chernetsky.vercel.app/"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/"
    }
  ],
  "paths": {
    "/notes": {
      "get": {
        "summary": "notes",
        "tags": [
          "notes"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/search"
          },
          {
            "$ref": "#/components/parameters/tag"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/notes"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
    "components": {
      "parameters": {
        "search": {
          "name": "search",
          "in": "query",
          "description": "The search string to use for search in a DB",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        "tag": {
          "name": "tag",
          "in": "query",
          "description": "The tag to use for search in a DB",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        "sportId": {
          "name": "sportId",
          "in": "path",
          "description": "The ID of the sport",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      },
      "responses": {
        "BadRequest": {
          "description": "Bad Request"
        },
        "NotFoundError": {
          "description": "Not Found Error"
        },
        "InternalServerError": {
          "description": "Internal Server Error"
        }
      },
      "schemas": {
        "tag": {
          "type": "string"
        },
        "note": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            },
            "note_id": {
              "type": "integer"
            },
            "user_id": {
              "type": "integer"
            },
            "text": {
              "type": "string"
            },
            "last_updated": {
              "type": "string"
            },
            "date_created": {
              "type": "string"
            },
            "heading":{
              "type": "string"
            },
            "tags": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/tag"
              }
            }
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/note"
          }
        },
        "Sport": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "title": {
              "type": "string"
            },
            "slug": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "liveCount": {
              "type": "integer"
            },
            "upcomingCount": {
              "type": "integer"
            },
            "liveStreamEventsCount": {
              "type": "integer"
            },
            "upcomingStreamEventsCount": {
              "type": "integer"
            },
            "hasPrematchEvents": {
              "type": "boolean"
            },
            "hasFeaturedEvents": {
              "type": "boolean"
            },
            "hasCoupons": {
              "type": "boolean"
            },
            "hasSpecials": {
              "type": "boolean"
            },
            "tournaments": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
