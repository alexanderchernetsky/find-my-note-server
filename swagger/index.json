{
  "openapi": "3.0.0",
  "info": {
    "title": "Find My Note Express API with Swagger",
    "version": "0.1.0",
    "description": "This is a simple CRUD API application made with Express and documented with Swagger",
    "contact": {
      "name": "Alex Chernetsky",
      "url": "https://alexander-chernetsky.vercel.app/"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001/"
    }
  ],
  "paths": {
    "/tags": {
      "get": {
        "summary": "to get all tags",
        "tags": [
          "tags"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/tags"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },

    "/notes": {
      "get": {
        "summary": "to get all notes",
        "tags": [
          "notes"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/search"
          },
          {
            "$ref": "#/components/parameters/tag"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/notes"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },

    "/note": {
      "post": {
        "summary": "to create a new note",
        "tags": [
          "notes"
        ],
        "requestBody": {
          "description": "A JSON object containing new note information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "A body of the new note request",
                "properties": {
                  "user_id": {
                    "type": "string"
                  },
                  "heading": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/note"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },

    "/note/{id}": {
      "patch": {
        "summary": "to update an existing note",
        "tags": [
          "notes"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "requestBody": {
          "description": "A JSON object containing updated note information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "A body of the update note request",
                "properties": {
                  "heading": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "A body of the update note response",
                  "properties": {
                    "values": {
                      "type": "object",
                      "properties": {
                        "last_updated": {
                          "type": "string"
                        },
                        "heading": {
                          "type": "string"
                        },
                        "text": {
                          "type": "string"
                        },
                        "tags": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },

      "delete": {
        "summary": "to delete an existing note",
        "tags": [
          "notes"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/success_message"
                }
              }
            }
          },
          "204": {
            "$ref": "#/components/responses/NoContent"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }


  },

  "components": {
    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "description": "The id of the entity",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "search": {
        "name": "search",
        "in": "query",
        "description": "The search string to use for search in a DB",
        "required": false,
        "schema": {
          "type": "string"
        }
      },
      "tag": {
        "name": "tag",
        "in": "query",
        "description": "The tag to use for search in a DB",
        "required": false,
        "schema": {
          "type": "string"
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad Request"
      },
      "NotFoundError": {
        "description": "Not Found Error"
      },
      "InternalServerError": {
        "description": "Internal Server Error"
      },
      "NoContent": {
        "description": "Indicates that the server has successfully fulfilled the request but there is no content to send in the response payload body"
      }
    },
    "schemas": {
      "note": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "note_id": {
            "type": "integer"
          },
          "user_id": {
            "type": "integer"
          },
          "text": {
            "type": "string"
          },
          "last_updated": {
            "type": "string"
          },
          "date_created": {
            "type": "string"
          },
          "heading":{
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },

      "notes": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/note"
        }
      },

      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },

      "success_message": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }

    }
  }
}
